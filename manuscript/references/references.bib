@article{brassard2022a,
   author = {Brassard, D. and Elvidge Munene, L.A. and St-Pierre, S. and Guenther, P.M. and Kirkpatrick, S.I. and Slater, J. and Lemieux, S. and Jessri, M. and Haines, J. and Prowse, R. and Olstad, D.L. and Garriguet, D. and Vena, J. and Vatanparast, H. and L’Abbe, M.R. and Lamarche, B.},
